{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Exhibit": {
      "$ref": "#/definitions/Exhibit"
    }
  },
  "required": [
    "Exhibit"
  ],
  "title": "Exhibit",
  "definitions": {
    "Exhibit": {
      "$id": "#/properties/Exhibit",
      "type": "object",
      "title": "The Exhibit Schema",
      "required": [
        "did",
        "boothNumber"
      ],
      "additionalProperties": true,
      "properties": {
        "did": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "title": "Name"
        },
        "shortDescription": {
          "type": "string",
          "title": "Short Description"
        },
        "fullDescription": {
          "type": "string",
          "title": "Full Description"
        },
        "logoURL": {
          "type": "string",
          "title": "Logo URL"
        },
        "videoURL": {
          "type": "string",
          "title": "Video URL"
        },
        "boothNumber": {
          "type": "string",
          "title": "Booth Number"
        },
        "startDate": {
          "type": "string",
          "title": "Start Date",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "title": "End Date",
          "format": "date"
        },
        "organization": {
          "type": "string",
          "title": "Organization"
        },
        "imageLinks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pdfLink": {
          "type": "string"
        },
        "pptLink": {
          "type": "string"
        },
        "qrRequired" : {
          "type": "boolean",
          "default": true
        },
        "qrId": {
          "type": "string",
          "title": "QR Id"
        },
        "quizConfig": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title",
              "placeholder": "Title"
            },
            "description": {
              "type": "string",
              "title": "Description",
              "placeholder": "Description"
            },
            "questions": {
              "type": "array",
              "title": "Questions",
              "items": {
                "type": "object",
                "title": "Question Details",
                "properties": {
                  "question": {
                    "type": "string",
                    "title": "Question"
                  },
                  "correctAnswer": {
                    "type": "string",
                    "title": "Correct Answer"
                  },
                  "options": {
                    "type": "array",
                    "title": "Options",
                    "items": {
                      "type": "string",
                      "title": "Option"
                    }
                  }
                },
                "required": ["question", "correctAnswer", "options"]
              }
            }
          },
          "required": ["title", "questions"],
          "label": "Quiz",
          "input": true
        }
      }
    }
  },
  "_osConfig": {
    "internalFields": [],
    "privateFields": [],
    "uniqueIndexFields": [],
    "ownershipAttributes": [],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
      ],
    "roles": [
      "anonymous"
    ],
    "inviteRoles": [
      "anonymous"
    ],
    "enableLogin": false,
    "enableSearch": true
  }
}
